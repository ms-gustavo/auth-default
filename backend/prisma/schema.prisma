
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  USER
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  role ROLE @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserTemp {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  role ROLE @default(USER)
  confirmId String @unique
  createdAt DateTime @default(now())
}